@page "/calendar"

@using Microsoft.AspNetCore.Authorization
@using System.Globalization

@attribute [Authorize]

<RadzenScheduler TItem="Appointment" style="height: 768px;" TextProperty="Text" SelectedIndex="2" Culture="@(CultureInfo.GetCultureInfo("pt-BR"))">
    <RadzenDayView />
    <RadzenWeekView />
    <RadzenMonthView />
    <RadzenYearView />
</RadzenScheduler>

@code {
    IList<Appointment> appointments = new List<Appointment>();

    public class Appointment
    {
        public DateTime Start { get; set; }
        public DateTime End { get; set; }

        public string Text { get; set; }
    }
}
